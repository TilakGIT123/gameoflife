
pipeline {
    agent any
     
        choice = new ChoiceParameterDefinition('Param name', ['option1', 'option2'] as String[], 'Description')
        input message: 'Select one', parameters: [choice]
        
        stages {
        stage('Example') {
            steps {               
                echo "Choice: ${params.CHOICE}"               
            }
        }
    }
        }
