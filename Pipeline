pipeline {
  agent any
  tools { 
        maven 'Maven_New'
        jdk 'JDK'
  }
  environment {
        MYJOB = 'DevOps'
        BUILD = 'PIPELINE'
    }
  stages {
    stage('Clone repository') {
	environment {
        MYJOB = 'DevOps1'
        BUILD = 'PIPELINE1'
    }
      steps {
        checkout scm
        sh 'echo $MYJOB'
      }
    }
      stage('Build') {
        steps {
        sh 'mvn clean package'
        sh 'echo $USER'
        sh 'echo whoami'
        sh 'echo $MYJOB'
        } 
        post {
                always {
                        junit "**/target/**/*.xml"
                }
        }
      }
      stage('forDemo') {
      when {
            branch 'master'
        }
      steps {
        sh 'echo This is master'
      }
    }
   }
}
